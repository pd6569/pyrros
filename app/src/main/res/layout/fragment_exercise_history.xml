<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginBottom="45dp"
             tools:context="com.zonesciences.pyrros.fragment.ExerciseHistoryFragment">
    <TextView
        android:id="@+id/textview_exercise_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXERCISE HISTORY FRAGMENT"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_exercise_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none"
        tools:listitem="@layout/item_exercise_history" />

</LinearLayout>
