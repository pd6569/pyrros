<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.zonesciences.pyrros.fragment.ExerciseHistoryFragment">
    <TextView
        android:id="@+id/textview_exercise_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EXERCISE HISTORY FRAGMENT"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_exercise_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:clipToPadding="false"
        android:scrollbars="none"
        tools:listitem="@layout/item_workout" />

</RelativeLayout>
