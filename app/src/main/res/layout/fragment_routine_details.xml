<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  tools:context="com.zonesciences.pyrros.fragment.CreateRoutine.RoutineDetailsFragment">

        <EditText
            android:id="@+id/edit_text_routine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Routine name"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="textNoSuggestions"/>

        <Button
            android:id="@+id/button_routine_add_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routine_add_day"
            android:layout_gravity="center"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/linear_layout_routine_workout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

</ScrollView>