<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="com.zonesciences.pyrros.fragment.Routine.RoutineDetailsFragment">

    <LinearLayout
        android:id="@+id/layout_add_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/autocomplete_field_workout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Workout name"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="textAutoComplete"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button_routine_add_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/routine_add_day"
            android:layout_gravity="center"
            android:padding="10dp"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/cardBackground"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/layout_routine_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_routine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/routine_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/routine_name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_margin="5dp"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_routine_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/routine_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/routine_description"
                    android:inputType="text"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>


            <Spinner
                android:id="@+id/routine_goal_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

            <Spinner
                android:id="@+id/routine_level_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_routine_workouts"
        android:layout_below="@+id/layout_add_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_routine_workout">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/floating_buttons_margin"
        android:src="@drawable/ic_add_white_24dp"/>

</RelativeLayout>

