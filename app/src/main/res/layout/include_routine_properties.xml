<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/routine_properties_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/cardBackground"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/layout_routine_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_routine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/routine_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/routine_name"
                android:inputType="text"
                android:maxLines="1"
                android:layout_margin="5dp"
                />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_routine_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/routine_description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/routine_description"
                android:inputType="textMultiLine"
                android:layout_margin="5dp"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="Goal"/>

        <Spinner
            android:id="@+id/routine_goal_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="Training level"/>

        <Spinner
            android:id="@+id/routine_level_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="Shared"/>

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/routine_shared_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="left"
            android:checked="true"/>

        <View
            android:id="@+id/workout_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:id="@+id/routine_properties_ok_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:textAllCaps="true"
            android:gravity="right"
            android:textColor="@color/colorPrimaryDark"
            android:text="OK"/>

    </LinearLayout>

</android.support.v7.widget.CardView>