<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zonesciences.pyrros.WorkoutActivity"
    tools:showIn="@layout/activity_workout">

    <FrameLayout
        android:id="@+id/workout_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_exercises"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        tools:context=".activity_workout"/>

    <TextView
        android:id="@+id/timer_overlay_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/timer_overlay"
        android:visibility="gone"/>

</RelativeLayout>



