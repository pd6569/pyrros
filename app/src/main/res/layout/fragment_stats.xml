<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/stats_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATS FRAGMENT"
        android:gravity="center_horizontal"
        android:textSize="24dp"
        android:layout_marginBottom="15dp"/>

    <GridLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="2"
                android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="total sets"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/stats_total_sets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="total sets"
                    android:gravity="center_horizontal"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="total reps"
                    android:gravity="center_horizontal"
                    />

                <TextView
                        android:id="@+id/stats_total_reps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total reps"
                        android:gravity="center_horizontal"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="total volume"
                    android:gravity="center_horizontal"
                    />

                <TextView
                        android:id="@+id/stats_total_volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="total volume"
                        android:gravity="center_horizontal"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="heaviest weight"
                    android:gravity="center_horizontal"
                    />

                <TextView
                        android:id="@+id/stats_heaviest_weight_lifted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="heaviest weight"
                        android:gravity="center_horizontal"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/stats_one_rep_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stats_three_rep_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stats_five_rep_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stats_ten_rep_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stats_number_of_sessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/stats_averagae_sets_per_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </GridLayout>

</LinearLayout>