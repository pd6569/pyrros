<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/routine_details_cardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:elevation="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/linear_layout_routine_workout_cardview"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?selectableItemBackground"
                  android:weightSum="10"
                  android:paddingTop="15dp"
                  android:paddingBottom="15dp"
                  android:paddingLeft="10dp"
                  android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/routine_workout_delete_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_gray_24dp"/>

            <TextView
                android:id="@+id/routine_workout_item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:text="Workout Day 1"/>

            <ImageView
                android:id="@+id/routine_workout_reorder_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_reorder_gray_24dp"/>



        </LinearLayout>



        <View
            android:id="@+id/workout_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:id="@+id/no_exercises_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:gravity="center"
            android:text="@string/no_exercises"
            android:textStyle="bold"
            android:textSize="@dimen/medium"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            />

        <LinearLayout
            android:id="@+id/linear_layout_routine_workout_exercises_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>


        <!--Workout overview-->

        <LinearLayout
            android:id="@+id/linear_layout_routine_workout_overview_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_workout_overview"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sets"/>

                <TextView
                    android:id="@+id/routine_workout_total_sets_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/workout_overview"
                    android:text="25"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muscles"/>

                <TextView
                    android:id="@+id/routine_workout_muscle_groups_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/workout_overview"
                    android:text="biceps\ntriceps\nlegs\nback"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"/>

                <TextView
                    android:id="@+id/routine_workout_workout_duration_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/workout_overview"
                    android:text="45 mins"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

