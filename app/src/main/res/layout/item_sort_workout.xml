<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/sort_workout_cardview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/item_sort_workout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?selectableItemBackground"
                  android:padding="15dp">

        <ImageView
            android:id="@+id/sort_workout_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:scaleType="center"
            android:src="@drawable/ic_close_gray_24dp"/>

        <TextView
            android:id="@+id/sort_workout_exercise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="16dp"
            android:layout_gravity="center_vertical|center"
            android:text="Exercise Name"/>

        <ImageView
            android:id="@+id/sort_workout_reorder_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:scaleType="center"
            android:src="@drawable/ic_reorder_gray_24dp"/>

    </FrameLayout>

</android.support.v7.widget.CardView>